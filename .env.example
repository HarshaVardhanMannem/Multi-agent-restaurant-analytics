# Database Configuration
# Supabase Transaction Pooler URL (Recommended for cloud)
DATABASE_URL=postgresql://postgres.project:password@aws-0-region.pooler.supabase.com:6543/postgres

# Direct Supabase Connection (Fallback)
SUPABASE_DB_URL=postgresql://postgres.project:password@aws-0-region.pooler.supabase.com:5432/postgres

# Local PostgreSQL Configuration (Optional)
# Set ENABLE_LOCAL_POSTGRES=True to write to both Supabase and local DB
ENABLE_LOCAL_POSTGRES=True
LOCAL_POSTGRES_URL=postgresql://postgres:postgrespassword@localhost:5433/restaurant_analytics

# Supabase Toggle (Default: True)
# Set to False to disable Supabase ingestion (e.g., for offline dev)
ENABLE_SUPABASE=True

# OpenAI API Key (for embeddings/LLM)
OPENAI_API_KEY=sk-...

# Data Sources Configuration
TOAST_EXPORT_PATH=data/toast_pos_export.json
DOORDASH_EXPORT_PATH=data/doordash_orders.json
SQUARE_DATA_DIR=data/square
